<Window x:Class="Lesson.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lesson"
        mc:Ignorable="d"
        Title="print star" Height="300" Width="200">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="6*"/>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="1.5*"/>
            <RowDefinition Height="8.5*"/>
        </Grid.RowDefinitions>
        <TextBlock Name="txtQuestion"  Grid.Row="0" Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="12" Margin="0,10,0,0">How many lines?</TextBlock>
        <TextBox x:Name="txtbxInput" Grid.Column="1" HorizontalAlignment="Center" Height="23" Text="1" VerticalAlignment="Center" Width="20" Margin="0,10,0,0"/>
        <Button  x:Name="btnShow" Grid.Column="2" Width="20" Height="20" HorizontalAlignment="Center" Click="BtnShow_Click" Margin="0,10,0,0">Ok</Button>
        <TextBlock x:Name="txtDisplay" Grid.Column="0" Grid.Row="1"  Grid.ColumnSpan="3" TextAlignment="Left" HorizontalAlignment="Center" VerticalAlignment="Center"  ></TextBlock>
    </Grid>
</Window>
