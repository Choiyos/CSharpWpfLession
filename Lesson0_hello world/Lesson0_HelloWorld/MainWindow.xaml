<Window x:Class="Lesson0_HelloWorld.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lesson0_HelloWorld"
        mc:Ignorable="d"
        Title="hello world" Height="100" Width="200">
    <Grid>
        <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="20" Name="txtHello">hello world!</TextBlock>
        <Button x:Name="btnShowHello" Width="30" Height="30" HorizontalAlignment="Right" Margin="10" Click="BtnShowHello_Click">hello</Button>
    </Grid>
</Window>
